<form action="/event/create" method="POST">
<div class="row">
    <div  class="card col-24 col-sm-12 col-lg-8 col-xl-6"  style="border:none" >
       <div class="form-group">
         <label>Event Name:</label>
         <input type="text" class="form-control" name="Event[name]" required>
       </div>
       <div class="form-group" >
         <label>Short Description:</label>
         <input type="text" class="form-control" style="height:150px" name="Event[description_short]" required>
       </div>
       <div class="form-group">
         <label>Full Description:</label>
         <input type="text" class="form-control" style="height:150px" name="Event[description_full]" required>
       </div>
    </div>
    <div class="card col-24 col-sm-12 col-lg-8 col-xl-6 " style="border:none">
        <div class="form-group">
            <label>Image URL:</label>
            <input type="url" class="form-control" name="Event[URL]" required>
        </div>
        <div>
            <span>Organizer:</span><br>
            <select name="Event[organizer]">
                <option>Please select a organizer:</option>
                <option >Cheng</option>
                <option >Wang</option>
                <option >LIN</option>
            </select>
        </div>
        <div class="form-group">
            <label>Event Date:</label>
            <input type="date" class="form-control" name="Event[date]" required>
        </div>
        <div class="form-group">
            <label>Time:</label>
            <input type="text" class="form-control" name="Event[time]" required>
        </div>
        <div class="form-group">
                <span>Venue:</span><br>
            <select name="Event[Venue]">
                <option>Please select a Venue:</option>
                <option >AAB 707</option>
                <option >SCT 502</option>
                <option >FCS 901</option>
                <option >FCS 801A</option>
            </select>
        </div>
        <div class="form-group">
            <label>Quota</label>
            <input type="number" class="form-control" name="Event[quota]" required>
        </div>
        <div>
                <span>
                      <input type="checkbox" value="ture" name="Event[highlighted]">Highlighted  Event
                </span>
         </div>
        <button type="submit" class="btn btn-primary" style="width:100px">Submit</button>
      </div>
      
</div>
     
    </form>